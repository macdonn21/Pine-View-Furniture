@model S1G1_PVFAPP.Models.VENDOR

@{
    ViewBag.Title = "Create";
}

<div class="box box-info">
    <div class="box-header with-border">
        <h4><b>VENDOR</b></h4>
        <hr />
        <h1 class="box-title">@ViewBag.Title</h1>
    </div>
